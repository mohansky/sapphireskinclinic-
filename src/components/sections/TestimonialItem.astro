---
import Heading from "../ui/Heading.astro";
import Paragraph from "../ui/Paragraph.astro";
import { Icon } from "astro-icon/components";

interface TestimonialContent {
  text: string;
  patient: string;
  rating: number;
}

interface Props {
  testimonials: TestimonialContent;
}

const { text, patient, rating } = Astro.props.testimonials;
---

<div class="swiper-slide bg-base-100 py-14">
  <div
    class="bg-base-100 max-w-2xl mx-auto z-50 flex flex-col items-center justify-center min-h-44"
  >
    <Paragraph class="text-balance text-center mb-5">{text}</Paragraph>
    {
      patient && (
        <span class="flex flex-row items-center gap-5">
          
          <Heading
            size="sm"
            class="tracking-wide opacity-80"
            fontstyle="glory"
            fontweight="normal"
          >
            {patient}
          </Heading>
          {rating && (
            <span class="flex flex-row items-center gap-1 text-base-content text-sm font-poppins">
              <Icon name="lucide:star" class="text-primary" /> {rating}
            </span>
          )}
        </span>
      )
    }
  </div>
  <!-- <div class="swiper-pagination" ></div> -->
</div>
