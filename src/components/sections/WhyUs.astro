---
import { getCollection } from "astro:content";
import Container from "../ui/Container.astro";
import Heading from "../ui/Heading.astro";
import Paragraph from "../ui/Paragraph.astro";
import { Icon } from "astro-icon/components";

const aboutData = await getCollection("aboutCollection");
const aboutInfo = aboutData[0].data;
const whyUs = aboutInfo.whyUs;
---

<Container>
  <Heading class="text-center mb-5">
    {whyUs.heading}
  </Heading>
  <ul class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      whyUs.list.map((item) => (
        <li class="card card-border bg-base-200 hover:bg-base-300">
          <div class="card-body">
            <Icon class="w-10 h-10" name={item.icon} title={item.text} />
            <Paragraph>{item.text}</Paragraph>
          </div>
        </li>
      ))
    }
  </ul>
</Container>
